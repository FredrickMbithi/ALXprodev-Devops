#!/bin/bash

# Extract the Pok√©mon's name and capitalize first letter
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')

# Extract the type (first type)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Extract weight and convert to kg (API gives weight in hectograms, divide by 10)
weight=$(jq -r '.weight' data.json)
formatted_weight=$(awk "BEGIN {printf \"%.0f\", $weight/10}")

# Extract height and convert to meters (API gives height in decimeters, divide by 10)
height=$(jq -r '.height' data.json)
formatted_height=$(awk "BEGIN {printf \"%.1f\", $height/10}")

# Print the formatted output
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
