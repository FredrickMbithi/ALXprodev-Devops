#!/bin/bash

# The PokÃ©mon we want info about
POKEMON="pikachu"

# The website address (API URL)
URL="https://pokeapi.co/api/v2/pokemon/${POKEMON}"

# Try to get the data
curl -s "$URL" -o data.json

# Check if it worked
if [ $? -eq 0 ]; then
    echo "Successfully saved Pikachu data to data.json!"
else
    echo "Error: Failed to fetch data" >> errors.txt
    echo "Failed to get Pikachu data. Check errors.txt"
fi
